{
  "compilerOptions": {
    "target": "es5",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "baseUrl": "src",
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
    "tst"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
